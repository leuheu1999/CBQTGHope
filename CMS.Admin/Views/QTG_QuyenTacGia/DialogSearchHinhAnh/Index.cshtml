@using Module.Framework.Common;
@{
    var user = LoginManager.GetCurrentUser();
    var admin = LoginManager.CheckAdmin();
    var modelParam = new Business.Entities.Domain.TT_HinhAnhParam();
    var modelList = new List<Business.Entities.Domain.TT_HinhAnhMap>();
}
<script src="~/Scripts/QTG_QuyenTacGia/QTG_QuyenTacGia_SearchHinhAnh.js"></script>
<div class="modal fade custom-margin-form-group" id="dialogSearchHinhAnh" aria-hidden="false" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header h-25">
                <h5 class="modal-title">Thông tin hình ảnh </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.Partial("DialogSearchHinhAnh/Search", modelParam)
                </div>
                <div class="table-responsive mt-3 sh-list-hinhanh" id="result-searchhinhanh">
                    @Html.Partial("DialogSearchHinhAnh/List", modelList)
                </div>
                <div class="table-responsive mt-3 sh-update-hinhanh" id="result-updatehinhanh">
                    @Html.Partial("DialogSearchHinhAnh/Update", modelList)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fas fa-times mr-2"></i> Đóng</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (Common.Empty(Common.QTG_QuyenTacGia_SearchHinhAnh)) {
            Common.QTG_QuyenTacGia_SearchHinhAnh = new QTG_QuyenTacGia_SearchHinhAnh({
                Url: {
                    SearchHinhAnh: '@Url.Action("SearchHinhAnh", "QTG_QuyenTacGia")',
                    SaveHinhAnh: '@Url.Action("SaveHinhAnh", "QTG_QuyenTacGia")',
                    UpdateHinhAnh: '@Url.Action("UpdateHinhAnh", "QTG_QuyenTacGia")',
                    DeleteHinhAnh: '@Url.Action("DeleteHinhAnh", "QTG_QuyenTacGia")',
                    UploadPicture: '@Url.Action("UploadPicture", "QTG_QuyenTacGia")',
                },
                ListHinhAnh: [],
            });
        }
        else {
            Common.QTG_QuyenTacGia_SearchHinhAnh.RegisterEvent();
        }
    });
</script>