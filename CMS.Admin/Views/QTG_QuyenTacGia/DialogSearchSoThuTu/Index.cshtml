@using Module.Framework.Common;
@{
    var user = LoginManager.GetCurrentUser();
    var admin = LoginManager.CheckAdmin();
    var modelParam = new Business.Entities.Domain.QTG_SoThuTuParam();
    var modelList = new List<Business.Entities.Domain.QTG_SoThuTuMap>();
}
<script src="~/Scripts/QTG_QuyenTacGia/QTG_QuyenTacGia_SearchSoThuTu.js"></script>
<div class="modal fade custom-margin-form-group" id="dialogSearchSoThuTu" aria-hidden="false" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header h-25">
                <h5 class="modal-title">Thông tin số thứ tự</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.Partial("DialogSearchSoThuTu/Search", modelParam)
                </div>
                <div class="table-responsive mt-3 sh-list-sothutu" id="result-searchsothutu">
                    @Html.Partial("DialogSearchSoThuTu/List", modelList)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fas fa-times mr-2"></i> Đóng</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (Common.Empty(Common.QTG_QuyenTacGia_SearchSoThuTu)) {
            Common.QTG_QuyenTacGia_SearchSoThuTu = new QTG_QuyenTacGia_SearchSoThuTu({
                Url: {
                    SearchSoThuTu: '@Url.Action("SearchSoThuTu", "QTG_QuyenTacGia")',
                },
            });
        }
        else {
            Common.QTG_QuyenTacGia_SearchSoThuTu.RegisterEvent();
        }
    });
</script>