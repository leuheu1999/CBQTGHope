@using Module.Framework.Common;
@using CMS.Admin.Constaints;
@model Business.Entities.Domain.QTG_GiayChungNhanParam
@{
    var user = LoginManager.GetCurrentUser();
    var admin = LoginManager.CheckAdmin();
}
@using (Ajax.BeginForm("SearchGiayChungNhan", "QTG_QuyenTacGia", null, new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "Common.QTG_QuyenTacGia_SearchGiayChungNhan.BeforeSend",
    OnSuccess = "Common.QTG_QuyenTacGia_SearchGiayChungNhan.Success",
    OnFailure = "Common.ErrorMessage"
}, new { @class = "", @role = "form", @id = "idFormSearchGiayChungNhan" }))
{
    <div class="hidden">
        @Html.HiddenFor(m => m.PageIndex)
        @Html.HiddenFor(m => m.PageSize)
        <input id="CurrentUser" name="CurrentUser" type="hidden" value="@user.UserFullName">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.TextBoxFor(m => m.TuKhoa, new { @class = "form-control form-control-sm", @placeholder = "Nhập số GCN" })
        </div>
    </div>
    <div class="text-right mt-2">
        <button class="btn btn-info btn-sm text-white" type="button" id="btnSearchGiayChungNhan"><i class="fas fa-search mr-1"></i> Tìm kiếm</button>
    </div>
}
