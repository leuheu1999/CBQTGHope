@model Business.Entities.Domain.BC_CongBaoParam
@using CMS.Admin.Common
@using (Ajax.BeginForm("ListBC_CongBao", "BC_CongBao", null, new AjaxOptions
{
    UpdateTargetId = "result-searchlist",
    HttpMethod = "Post",
    OnBegin = "Common.BC_CongBao.BeforeSend",
    OnSuccess = "Common.BC_CongBao.Success",
    OnFailure = "Common.BC_CongBao.Error"
}, new { @class = "", @role = "form", @id = "IdformSearch" }))
{

    <div class="hidden">
        @Html.HiddenFor(m => m.PageIndex)
        @Html.HiddenFor(m => m.PageSize)
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="KyBaoCao" class="font-weight-bold">Kỳ báo cáo</label>
            @Html.DropDownListFor(m => m.KyBaoCao, CBODungChung.GetCBOKyBaoCao(), new { @class = "form-control form-control-sm select2-share" })
        </div>
        <div class="form-group col-md-3 div-nam">
            <label for="Nam" class="font-weight-bold">Năm</label>
            @Html.DropDownListFor(m => m.Nam, CBODungChung.GetCBONam(), new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3 hidden div-quy">
            <label for="Quy" class="font-weight-bold">Quý</label>
            @Html.DropDownListFor(m => m.Quy, CBODungChung.GetCBOQuy(), new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3 hidden div-thang">
            <label for="Thang" class="font-weight-bold">Tháng</label>
            @Html.DropDownListFor(m => m.Thang, CBODungChung.GetCBOThang(), new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3 hidden div-tungay">
            <label for="TuNgay" class="font-weight-bold">Từ ngày</label>
            <div class="input-group">
                @Html.TextBoxFor(m => m.TuNgay, new { @class = "form-control form-control-sm datepicker-share", @placeholder = "Nhập từ ngày" })
                <div class="input-group-prepend">
                    <label for="TuNgay" class="input-group-text cursor"><i class="far fa-calendar-alt"></i></label>
                </div>
            </div>
        </div>
        <div class="form-group col-md-3 hidden div-denngay">
            <label for="DenNgay" class="font-weight-bold">Đến ngày</label>
            <div class="input-group">
                @Html.TextBoxFor(m => m.DenNgay, new { @class = "form-control form-control-sm datepicker-share", @placeholder = "Nhập đến ngày" })
                <div class="input-group-prepend">
                    <label for="DenNgay" class="input-group-text cursor"><i class="far fa-calendar-alt"></i></label>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="QuyenID" class="font-weight-bold">Quyền</label>
            @Html.DropDownListFor(m => m.QuyenID, CBODungChung.GetCBOBCQuyen(), "--Chọn quyền--", new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3">
            <label for="LoaiThuTucID" class="font-weight-bold">Loại thủ tục</label>
            @Html.DropDownListFor(m => m.LoaiThuTucID, CBODungChung.GetCBOBCLoaiThuTuc(), "--Chọn loại thủ tục--", new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3">
            <label for="LoaiHinhID" class="font-weight-bold">Loại hình</label>
            @Html.DropDownListFor(m => m.LoaiHinhID, CBODungChung.GetCBOLoaiHinhTacPham("10"), "--Chọn loại hình--", new { @class = "form-control form-control-sm  select2-share" })
        </div>
        <div class="form-group col-md-3">
            <label for="VungMienID" class="font-weight-bold">Vùng miền</label>
            @Html.DropDownListFor(m => m.VungMienID, CBODungChung.GetCBOVungMien(), "--Chọn vùng miền--", new { @class = "form-control form-control-sm  select2-share" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="TacGia" class="font-weight-bold">Tác giả</label>
            @Html.TextBoxFor(m => m.TacGia, new { @class = "form-control form-control-sm", @placeholder = "Nhập tên tác giả" })
        </div>
        <div class="form-group col-md-3">
            <label for="ChuSoHuu" class="font-weight-bold">Chủ sở hữu</label>
            @Html.TextBoxFor(m => m.ChuSoHuu, new { @class = "form-control form-control-sm", @placeholder = "Nhập chủ sở hữu" })
        </div>
        <div class="form-group col-md-3">
            <label for="NguoiDaiDien" class="font-weight-bold">Người đại diện</label>
            @Html.TextBoxFor(m => m.NguoiDaiDien, new { @class = "form-control form-control-sm", @placeholder = "Nhập người đại diện" })
        </div>
        <div class="form-group col-md-3">
            <label for="IsToChuc" class="font-weight-bold"></label>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="IsToChuc" @(Model.IsToChuc ? "checked" : "")>
                <label class="form-check-label" for="IsToChuc">Tổ chức</label>
            </div>
        </div>
    </div>
    <div class="w-100 text-center mt-2">
        <button type="button" id="btnTimKiem" class="btn btn-primary btn-sm btn-block-sm cursor mr-2 cursor"><i class="fas fa-search mr-1"></i>Tổng hợp</button>
    </div>
}
