@using CMS.Admin.Common
@model Business.Entities.Domain.DM_NguoiKyMapAdd
<div class="hidden">
    @Html.HiddenFor(model => model.Id)
</div>
<div>
    <div class="form-group">
        <label class="font-weight-bold">Mã <span class="text-danger font-weight-bold">(*)</span></label>
        @Html.TextBoxFor(model => model.Ma, new { @class = "form-control form-control-sm", @placeholder = "Mã" })
        <div class="field-validation-error thongbaomaNguoiKy invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Tên người ký <span class="text-danger font-weight-bold">(*)</span></label>
        @Html.TextBoxFor(model => model.Ten, new { @class = "form-control form-control-sm", @placeholder = "Tên cơ quan cấp" })
        <div class="field-validation-error thongbaotenNguoiKy invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Mô tả</label>
        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control form-control-sm", @placeholder = "Nhập mô tả" })
        <div class="field-validation-error thongbaomotaNguoiKy invalid-feedback"></div>
    </div>
    <div class="form-group form-check mt-3">
        <input type="checkbox" class="form-check-input" name="IsActive" id="check-is-active" value="@(Model.IsActive == true ? "True" : "False")" @(Model.IsActive == true ? "checked='checked'" : "")>
        <label class="form-check-label font-weight-bold" for="check-is-active">Hoạt động</label>
    </div>
</div>