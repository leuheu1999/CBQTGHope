@using CMS.Admin.Common
@model Business.Entities.Domain.DM_QuyenChucNangMapParam
@using (Ajax.BeginForm("TimKiem", "DM_QuyenChucNang", null, new AjaxOptions
{
    UpdateTargetId = "result-searchlist",
    HttpMethod = "Post",
    OnBegin = "Common.DMQuyenChucNang.BeforeSend",
    OnSuccess = "Common.DMQuyenChucNang.Success",
    OnFailure = "Common.DMQuyenChucNang.Error"
}, new { @class = "", @role = "form", @id = "IdformSearch" }))
{

<div class="hidden">
    @Html.HiddenFor(m => m.PageIndex)
    @Html.HiddenFor(m => m.PageSize)
</div>
    <div class="input-group">
        @Html.TextBoxFor(m => m.TuKhoa, new { @class = "form-control form-control-sm w-50", @placeholder = "Nhập thông tin cần tìm" })
        @Html.DropDownListFor(m => m.QuyenID, CBODungChung.GetCBOQuyen(), "--Chọn quyền--", new { @class = "form-control form-control-sm", @Id= "QuyenIDS" })
        <div class="input-group-prepend">
            <button class="btn btn-info btn-sm text-white" type="submit" id="btnFormSearch"><i class="fas fa-search mr-1"></i> Tìm kiếm</button>
        </div>
    </div>
}
