@using CMS.Admin.Common
@model Business.Entities.Domain.DM_LoaiSoMapAdd
<div class="hidden">
    @Html.HiddenFor(model => model.ID)
</div>
<div>
    <div class="form-group">
        <label class="font-weight-bold">Tên <span class="text-danger font-weight-bold">(*)</span></label>
        @Html.TextBoxFor(model => model.Ten, new { @class = "form-control form-control-sm", @placeholder = "Tên" })
        <div class="field-validation-error thongbaotenLoaiSo invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Số hiện tại</label>
        @Html.TextBoxFor(model => model.SoHienTai, new { @class = "form-control form-control-sm", @placeholder = "Số hiện tại" })
        <div class="field-validation-error thongbaosohientaiLoaiSo invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Năm</label>
        @Html.TextBoxFor(model => model.Nam, new { @class = "form-control form-control-sm", @placeholder = "Năm" })
        <div class="field-validation-error thongbaonamLoaiSo invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Tiền tố</label>
        @Html.TextBoxFor(model => model.Prefix, new { @class = "form-control form-control-sm", @placeholder = "Tiền tố" })
        <div class="field-validation-error thongbaotientoLoaiSo invalid-feedback"></div>
    </div>
    <div class="form-row form-group mt-3">
        <div class="form-check" style="width: 50%; padding-left: 1.5rem;">
            <input type="checkbox" class="form-check-input" name="ResetTheoNam" id="check-ResetTheoNam" value="@(Model.ResetTheoNam == true ? "True" : "False")" @(Model.ResetTheoNam == true ? "checked='checked'" : "")>
            <label class="form-check-label font-weight-bold" for="check-ResetTheoNam">Reset theo năm</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="TuTang" id="check-TuTang" value="@(Model.TuTang == true ? "True" : "False")" @(Model.TuTang == true ? "checked='checked'" : "")>
            <label class="form-check-label font-weight-bold" for="check-TuTang">Tự tăng</label>
        </div>
    </div>
    @*<div class="form-group hidden">
        <label class="font-weight-bold">Loại nghiệp vụ <span class="text-danger font-weight-bold">(*)</span></label>
        @Html.DropDownListFor(model => model.LoaiNghiepVuID, CBODungChung.GetAllCBOTableDM("E_LoaiNghiepVu"), new { @class = "form-control form-control-sm select2-single" })
        <div class="field-validation-error thongbaoloainghiepvuLoaiSo invalid-feedback"></div>
    </div>*@
</div>
