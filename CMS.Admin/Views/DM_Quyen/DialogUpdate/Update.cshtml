@using CMS.Admin.Common
@model Business.Entities.Domain.DM_QuyenMapAdd
<div class="hidden">
    @Html.HiddenFor(model => model.Id)
</div>
<div>
    <div class="form-group">
        <label class="font-weight-bold">Mã <span class="text-danger font-weight-bold">(*)</span></label>
        @Html.TextBoxFor(model => model.Ma, new { @class = "form-control form-control-sm", @placeholder = "Nhập mã" })
        <div class="field-validation-error thongbaoma invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Tên <span class="text-danger">(*)</span></label>
        @Html.TextBoxFor(model => model.Ten, new { @class = "form-control form-control-sm", @placeholder = "Nhập tên" })
        <div class="field-validation-error thongbaoTen invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Mô tả</label>
        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control form-control-sm", @placeholder = "Nhập mô tả" })
        <div class="field-validation-error thongbaoMoTa invalid-feedback"></div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Thứ tự hiển thị</label>
        @Html.TextBoxFor(model => model.ThuTuHienThi, new { @class = "form-control form-control-sm", @placeholder = "Nhập thứ tự hiển thị"})
    </div>
    <div class="form-group hidden-custom">
        <label class="font-weight-bold">Controller</label>
        @Html.DropDownListFor(model => model.DefaultController, CBODungChung.GetAllController(), "--Chọn controller--", new { @class = "form-control form-control-sm" })
    </div>
    <div class="form-group form-check mt-3">
        <input type="checkbox" class="form-check-input" id="CongKhai" name="CongKhai" value="@(Model.CongKhai == true ? "True" : "False")" @(Model.CongKhai == true ? "checked='checked'" : "")>
        <label class="form-check-label font-weight-bold" for="CongKhai">Công khai</label>
    </div>
</div>