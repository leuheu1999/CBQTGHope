@model Business.Entities.Domain.DM_QuyenMapParam
@using (Ajax.BeginForm("TimKiem", "DM_Quyen", null, new AjaxOptions
{
    UpdateTargetId = "result-searchlist",
    HttpMethod = "Post",
    OnBegin = "Common.DMQuyen.BeforeSend",
    OnSuccess = "Common.DMQuyen.Success",
    OnFailure = "Common.DMQuyen.Error"
}, new { @class = "", @role = "form", @id = "IdformSearch" }))
{

<div class="hidden">
    @Html.HiddenFor(m => m.PageIndex)
    @Html.HiddenFor(m => m.PageSize)
</div>
    <div class="input-group">
        @Html.TextBoxFor(m => m.TuKhoa, new { @class = "form-control form-control-sm w-50", @placeholder = "Nhập thông tin cần tìm" })
        <div class="input-group-prepend">
            <button class="btn btn-info btn-sm text-white" type="submit" id="btnFormSearch"><i class="fas fa-search mr-1"></i> Tìm kiếm</button>
        </div>
    </div>
}
